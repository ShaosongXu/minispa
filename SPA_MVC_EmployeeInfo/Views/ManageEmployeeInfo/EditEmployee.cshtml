@{
    ViewBag.Title = "Edit Employee";
}
<table><tr><td height="10px"></td></tr></table>

<table cellpadding="4" cellspacing="4" width="70%" align="center" style="background-color: skyblue; border:solid 2px red; padding-top:20px;">
    <tr><td colspan="2" style="background-color:gray; font-size:18pt; font-weight:bold; height:30px; text-align:center;">Edit Employee Information</td></tr>
    <tr>
        <td style="text-align:right;">Name</td>
        <td><input type="text" ng-model="Employee.name" />  </td>
    </tr>
    <tr>
        <td style="text-align:right;">Image</td>
        <td><img ng-src="{{ thumbnail.dirty? thumbnail.dataUrl : 'uploads/'+ Employee.imgUrl}}" height="40" width="40" /><input type="file" name="file" onchange="angular.element(this).scope().photoChanged(this.files)" /></td>
    </tr>
    <tr>
        <td style="text-align:right;">Email</td>
        <td><input type="text" ng-model="Employee.email" />  </td>
    </tr>
    <tr>
        <td style="text-align:right;">Hired Year</td>
        <td><input type="text" ng-model="Employee.hiredYear" />  </td>
    </tr>
    <tr>
        <td style="text-align:right;">City</td>
        <td><input type="text" ng-model="Employee.city" />  </td>
    </tr>
    <tr>
        <td style="text-align:right;">Country</td>
        <td><input type="text" ng-model="Employee.country" />  </td>
    </tr>
    <tr>
        <td></td>
        <td>
            <button data-ng-click="save()" type="button" class="btn btn-primary">
                Save
            </button>
            <br />
            <div>{{error}}</div>
        </td>
    </tr>

</table>
